<div class="container-fluid">
    <div class="panel panel-default">
        <!-- Title of the widget panel. -->
        <div class="panel-heading">
            <h3 class="panel-title"><%= title %></h3>
        </div>
        <div class="panel-body">
            <!-- Input element to render field value. -->
            <div class="row">
                <div class=" col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon3">Video embed URL</span>
                        <input type="text" class="form-control" id="wistia-url" aria-describedby="basic-addon3">
                    </div>
                </div>
            </div>
            <!-- Video tiles in a grid. -->
            <div class="row">
                <div class=" col-xs-12">
                    <h3><%= data[0].project.name %></h3>
                </div>
                <% data.forEach(item => { %>
                <div class="col-xs-6 col-sm-4">
                    <a href="#">
                        <div class="thumbnail">
                            <!-- Actual video player -->
                            <iframe src="https://fast.wistia.net/embed/iframe/<%= item.hashed_id %>"></iframe>
                            <div class="caption">
                                <h5><%= item.name %></h5>
                                <!-- Button to pass selected video to component. -->
                                <a class="btn btn-primary" role="button" data-video-id="<%= item.hashed_id %>"><span
                                            class="nonactive">Use video</span><span class="active">Active</span></a>
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

